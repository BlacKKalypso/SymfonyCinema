{% extends 'base.html.twig' %}

{% block title %}Artists{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>List of artists</h1>
        {% for actor in actors %}
            <ul>
                <li>
                    {{ actor.firstName }}
                    {{ actor.lastName }}
                </li>
            </ul>
        {% endfor %}
    </div>
{% endblock %}
