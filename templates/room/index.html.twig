{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>list of rooms</h1>
        {% for room in rooms %}
        <ul>
            <li>Room number:{{ room.roomNum }}
                Air conditioned (0: no, 1: yes) {{ room.airConditioned }}
                Room capacity: {{ room.capacity }}
                Cinema name: {{ room.cinema.name }}</li>
        </ul>
        {% endfor %}
    </div>
{% endblock %}
