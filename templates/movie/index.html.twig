{% extends 'base.html.twig' %}

{% block title %}Movies{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>List of movies</h1>
        {% for movie in movies %}
        <h2>Title: {{ movie.title }}</h2>
        {#
        {{ dump(movie) }}
            #}
        <p>Directed by {{ movie.director.firstName }} {{ movie.director.lastName }}</p>

        <h3>Casting:</h3>
        <ul>
            {% for actor in movie.actors %}
            <li>
                <b>{{ actor.firstName }} {{ actor.lastName }}</b>
                <ul>Known for:
                        {% for played in actor.starredMovies %}
                            {% if  (played.title != movie.title )%}
                            <li>{{ played.title }}</li>
                                <br/>
                            {% endif %}
                        {% endfor %}
                    </ul>
            </li>
            {% endfor %}
        </ul>

    <br/>
        {% endfor %}
    </div>
{% endblock %}
